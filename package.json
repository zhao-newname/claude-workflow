{
  "name": "claude-workflow",
  "version": "0.1.0",
  "description": "A universal, portable AI workflow system that evolves from single-agent to multi-agent collaboration",
  "main": "dist/index.js",
  "bin": {
    "cw": "dist/cli/index.mjs"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsup",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "workflow",
    "claude",
    "agent",
    "skill",
    "automation"
  ],
  "author": "",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "resources",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "minimatch": "^10.1.2",
    "ora": "^7.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
